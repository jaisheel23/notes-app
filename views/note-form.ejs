<%- include("partials/header.ejs") %> <% if (locals.note) { %>
<h2>Edit Note</h2>
<form action="/save-note" method="post" class="note-form">
  <input type="text" name="title" value="<%= note.title %>" class="form-item" />
  <textarea name="content" class="form-item"><%= note.content %></textarea>
  <button type="submit" class="form-item">Done</button>
</form>
<% } else { %>
<h2>Add new</h2>
<form action="/save-note" method="post" class="note-form">
  <input type="text" name="title" placeholder="Title" class="form-item" />
  <textarea name="content" placeholder="Content" class="form-item"></textarea>
  <button type="submit" class="form-item">Done</button>
</form>
<% } %> <%- include("partials/footer.ejs") %>
